@using HotelReservationSystem.ViewModels
@model ReservationViewModel

@{
    ViewData["Title"] = "Create Reservation";
}

<style>
    body {
        background: linear-gradient(rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.8)), url('/images/lake-6712968_1920.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .reservation-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 40px;
        border-radius: 10px;
        text-align: left;
        max-width: 600px;
        margin: 30px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .reservation-title {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 1.2rem;
    }

    .btn-primary {
        background: linear-gradient(to right, #007bff, #0056b3);
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin-top: 20px;
    }

        .btn-primary:hover {
            opacity: 0.8;
        }

    .btn-back {
        background: linear-gradient(to right, #778899, #696969);
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin-top: 20px;
        display: inline-block;
    }

        .btn-back:hover {
            opacity: 0.8;
        }

    .back-button-container {
        text-align: left;
        margin-top: 20px;
    }

</style>

<div class="reservation-container">
    <h2 class="reservation-title">Створити Резервацію</h2>

    <form asp-action="Create">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="StartDate" class="control-label">Дата початку</label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label">Дата завершення</label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="HotelId" />
        <input type="hidden" asp-for="RoomId" />

        <div class="form-group">
            <input type="submit" value="Створити" class="btn btn-primary" />
        </div>
    </form>

    <div class="back-button-container">
        <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.HotelId" class="btn btn-back">Назад</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Room

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="HotelId" />
            <input type="hidden" asp-for="RoomNumber" />
            <input type="hidden" asp-for="IsAvailable" />
            <input type="hidden" asp-for="Rating" />
            <div class="form-group">
                <label asp-for="PricePerNight" class="control-label"></label>
                <input asp-for="PricePerNight" class="form-control" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectedAmenities" class="control-label">Amenities</label>
                <select asp-for="RoomAmenities" asp-items="ViewBag.Amenities" multiple class="form-control" id="selectedAmenities" name="selectedAmenities"></select>
            </div>
            <div class="form-group">
                <label for="Image" class="control-label">Room Image</label>
                <input type="file" class="form-control" id="Image" name="Image" />
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@using HotelReservationSystem.ViewModels
@model IEnumerable<UserWithRolesViewModel>

@{
    ViewData["Title"] = "Users with Roles";
}

<h1>Users with Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span style="color:black" class="badge badge-primary">@role</span>
                    }
                </td>
                <td>
                    @{
                        bool isAdminOrManager = user.Roles.Contains("Administrator") || user.Roles.Contains("HotelManager");
                    }
                    @if (!isAdminOrManager)
                    {
                        <form asp-action="ChangeRoleToHotelManager" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.UserId" />
                            <button type="submit" class="btn btn-warning">Make Hotel Manager</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

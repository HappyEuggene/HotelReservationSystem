@model HotelReservationSystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #828282; /* Dark background */
        color: #f5f5f5; /* Light text color */
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .login-container {
        max-width: 400px;
        margin: auto;
        background-color: #2c2c2c; /* Darker background for the form */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        flex: 1;
    }

        .login-container h2 {
            margin-bottom: 20px;
            color: #f5f5f5; /* Light text color */
        }

        .login-container .form-control {
            background-color: #3a3a3a;
            color: #f5f5f5;
            border: none;
        }

            .login-container .form-control:focus {
                background-color: #444;
                border: none;
                box-shadow: none;
                color: #f5f5f5;
            }

        .login-container .btn-primary {
            background: linear-gradient(to right, #0066ff, #00ccff);
            border: none;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            transition: background 0.3s;
        }

            .login-container .btn-primary:hover {
                background: linear-gradient(to right, #005ce6, #00bfff);
            }

        .login-container .form-check-input {
            background-color: #3a3a3a;
            border: none;
        }

        .login-container .form-check-label {
            color: #f5f5f5;
        }

        .login-container a {
            color: #00bfff;
        }

            .login-container a:hover {
                text-decoration: underline;
            }

        .login-container .external-login-btn {
            background: linear-gradient(to right, #FF4500, #FF6347);
            color: #f5f5f5;
            border: none;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            transition: background 0.3s;
        }

            .login-container .external-login-btn:hover {
                background: linear-gradient(to right, #FF4500, #FF6347);
            }

    .footer-nav {
        background-color: #343a40;
        padding: 20px 0;
        width: 100%;
        margin-top: auto;
    }

        .footer-nav .nav-link {
            color: #fff !important;
            font-size: 1.1rem;
            padding: 0 15px;
        }

            .footer-nav .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }

    .footer-divider {
        color: #fff;
        margin: 0 10px;
    }
</style>

<div class="login-container">
    <h2>Hotel Reservation Online</h2>
    <form asp-action="Login">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Ввійти використовуючи електронну адресу</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Запам'ятати мене</label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
        <div class="form-group text-center">
            <p>
                <a asp-action="ForgotPassword">Допоможіть, я не пам'ятаю свій пароль</a>
            </p>
            <p>
                Немає акаунта? <a asp-action="Register">Створіть аккаунт безкоштовно</a>
            </p>
        </div>
    </form>
    <div class="form-group">
        <form asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" method="post">
            <button class="external-login-btn">
                Ввійти з Google
            </button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

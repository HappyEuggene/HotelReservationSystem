@using HotelReservationSystem.ViewModels
@model ReviewViewModel

@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="AddReview">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="HotelId" />

    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Review" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

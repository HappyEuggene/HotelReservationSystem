@model Hotel

@{
    ViewData["Title"] = "Delete Hotel";
}

<style>
    body {
        background: linear-gradient(rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.8)), url('/images/lake-6712968_1920.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .hotel-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 40px;
        border-radius: 10px;
        text-align: center;
        max-width: 800px; /* Changed max-width for better view */
        margin: 30px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .hotel-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .hotel-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #FFFAFA;
    }

        .hotel-table th,
        .hotel-table td {
            padding: 15px;
            text-align: left;
        }

        .hotel-table th {
            background-color: #e6e6e6;
            font-size: 1.05rem;
        }

        .hotel-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .hotel-table img {
            max-width: 220px;
            height: auto;
            border-radius: 5px;
        }

        .hotel-table tr {
            border-bottom: 1px solid #ccc;
        }

    .btn-container-wrapper {
        display: flex;
        justify-content: center;
        background-color: #d4d4d4;
        border-radius: 10px;
        padding: 20px 0px;
    }

    .btn-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .btn-primary,
    .btn-info,
    .btn-danger,
    .btn-details,
    .btn-edit,
    .btn-secondary {
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin: 5px 10px;
        width: 100px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(to right, #B22222, #8B0000);
        border: none;
        color: white;
    }

    .btn-details {
        background: linear-gradient(to right, #6B8E23, #556B2F);
        border: none;
        color: white;
    }

    .btn-edit {
        background: linear-gradient(to right, #008000, #006400);
        border: none;
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(to right, #778899, #696969 );
        border: none;
        color: white;
    }

        .btn-primary:hover,
        .btn-info:hover,
        .btn-danger:hover,
        .btn-details:hover,
        .btn-edit:hover,
        .btn-secondary:hover {
            opacity: 0.8;
        }

    .navbar-nav .nav-link,
    .navbar-nav .btn-link {
        background-color: #D3D3D3;
        border-radius: 10px;
        padding: 5px 10px;
        margin: 0 5px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .navbar-nav .nav-link:hover,
        .navbar-nav .btn-link:hover {
            background-color: #e0e0e0;
        }

    .navbar {
        border-radius: 10px;
        padding: 10px 20px;
    }

        .navbar .nav-item .nav-link {
            color: #333;
        }

            .navbar .nav-item .nav-link:hover {
                color: #000;
            }

    .footer-nav {
        background-color: #343a40;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

        .footer-nav .nav-link {
            color: #fff !important;
            font-size: 1.1rem;
            padding: 0 15px;
        }

            .footer-nav .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }

    .footer-divider {
        color: #fff;
        margin: 0 10px;
    }

    .navbar-background {
        background-color: transparent;
    }

    .btn-create-container {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 20px;
    }

    .btn-create {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        background: linear-gradient(to right, #005ce6, #00bfff);
        border: none;
        color: white;
        transition: background-color 0.3s ease;
    }

    .btn-container-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    dl.row dt, dl.row dd {
        padding: 10px 0;
        border-bottom: 1px solid #ccc;
        margin: 0;
    }

</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-background border-bottom box-shadow mb-3 rounded">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна сторінка</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="MyReservations">Мої резервації</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="MyProfile">Мій профіль</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="nav-link text-dark btn btn-link" style="border: none;">Вийти</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="hotel-container">
    <h1 class="hotel-title">Видалення готелю</h1>

    <h3>Ви впевнені що хочете видалити цей готель?</h3>
    <div>
        <img src="@Model.PictureUrl" alt="@Model.Name" class="img-fluid" style="max-width: 400px; border-radius: 10px; margin-bottom: 20px;" />
        <dl class="row">
            <dt class="col-sm-3">
                Назва готелю
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                Кількість кімнат
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.RoomCount)
            </dd>
            <dt class="col-sm-3">
                Готель для відпочинку?
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.VacationHotel)
            </dd>
            <dt class="col-sm-3">
                Опис
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                Контакти для зв'язку
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Contact)
            </dd>
        </dl>

        <div class="btn-container-row">
            <a asp-action="Hotels" asp-controller="Home" class="btn btn-secondary">Відмінити</a>
            <form asp-action="DeleteConfirmed" method="post" style="margin: 0;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Видалити" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

<footer class="footer-nav">
    <div class="container">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">Контакти</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Terms" asp-action="Index">Умови використання</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
            </li>
        </ul>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

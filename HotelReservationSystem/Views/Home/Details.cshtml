@model Hotel

@{
    ViewData["Title"] = "Hotel Details";
}

<style>
    body {
        background: linear-gradient(rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.8)), url('/images/lake-6712968_1920.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .hotel-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 40px;
        border-radius: 10px;
        text-align: center;
        max-width: 2000px;
        margin: 30px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .hotel-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .hotel-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #FFFAFA;
    }

        .hotel-table th,
        .hotel-table td {
            padding: 15px;
            text-align: left;
        }

        .hotel-table th {
            background-color: #e6e6e6;
            font-size: 1.05rem;
        }

        .hotel-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .hotel-table img {
            max-width: 220px;
            height: auto;
            border-radius: 5px;
        }

        .hotel-table tr {
            border-bottom: 1px solid #ccc;
        }

    .btn-primary,
    .btn-info,
    .btn-danger,
    .btn-details,
    .btn-edit {
        padding: 5px 1px;
        font-size: 14px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin: 5px 0;
        width: 100px; /* Increase width of buttons */
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        color: white;
    }

    .btn-danger {
        background: linear-gradient(to right, #B22222, #8B0000);
        border: none;
        color: white;
    }

    .btn-details {
        background: linear-gradient(to right, #6B8E23, #556B2F);
        border: none;
        color: white;
    }

    .btn-edit {
        background: linear-gradient(to right, #008000, #006400);
        border: none;
        color: white;
    }

    .btn-reserve {
        background: linear-gradient(to right, #28a745, #218838);
        border: none;
        color: white;
    }

    .btn-back-to-list {
        background: linear-gradient(to right, #778899, #696969);
        border: none;
        color: white;
        margin-top: 20px; /* Add margin to the top */
    }

    .btn-review {
        background: linear-gradient(to right, #FFA500, #FF8C00);
        border: none;
        color: black;
        margin-top: 20px; /* Add margin to the top */
    }

        .btn-primary:hover,
        .btn-info:hover,
        .btn-danger:hover,
        .btn-details:hover,
        .btn-edit:hover,
        .btn-reserve:hover,
        .btn-back-to-list:hover,
        .btn-review:hover {
            opacity: 0.8;
        }

    .navbar-nav .nav-link,
    .navbar-nav .btn-link {
        background-color: #D3D3D3;
        border-radius: 10px;
        padding: 5px 10px;
        margin: 0 5px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .navbar-nav .nav-link:hover,
        .navbar-nav .btn-link:hover {
            background-color: #e0e0e0;
        }

    .navbar {
        border-radius: 10px;
        padding: 10px 20px;
    }

        .navbar .nav-item .nav-link {
            color: #333;
        }

            .navbar .nav-item .nav-link:hover {
                color: #000;
            }

    .footer-nav {
        background-color: #343a40;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

        .footer-nav .nav-link {
            color: #fff !important;
            font-size: 1.1rem;
            padding: 0 15px;
        }

            .footer-nav .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }

    .footer-divider {
        color: #fff;
        margin: 0 10px;
    }

    .navbar-background {
        background-color: transparent;
    }

    .dl-horizontal dt {
        float: left;
        clear: left;
        width: 200px;
        overflow: hidden;
        text-align: right;
        text-overflow: ellipsis;
        white-space: nowrap;
        padding-right: 10px;
        text-align: left;
    }

    .dl-horizontal dd {
        margin-left: 250px;
    }

    .dl-horizontal dt,
    .dl-horizontal dd {
        padding: 10px 0;
        border-bottom: 1px solid #ccc;
    }

    .wide-table {
        width: 100%;
    }

        .wide-table th,
        .wide-table td {
            width: auto;
        }

    .btn-container {
        display: flex;
        justify-content: space-between;
    }

    .btn-right {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-background border-bottom box-shadow mb-3 rounded">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна сторінка</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="MyReservations">Мої резервації</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="MyProfile">Мій профіль</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="nav-link text-dark btn btn-link" style="border: none;">Вийти</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="hotel-container">
    <h1 class="hotel-title">Готель: @Model.Name</h1>

    <div class="row">
        <div class="col-md-12">
            <img src="@Model.PictureUrl" alt="@Model.Name" class="img-fluid" style="max-width: 400px; border-radius: 10px; margin-bottom: 20px;" />
            <dl class="dl-horizontal">
                <dt>
                    Назва готелю
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    Готель для відпочинку
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VacationHotel)
                </dd>
                <dt>
                    Опис
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    Контактна інформація
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Contact)
                </dd>
                <dt>
                    Рейтинг
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Rating) (Average)
                </dd>
                <dt>
                    Адреса
                </dt>
                <dd>
                    @if (Model.Address != null)
                    {
                        <div>
                            @Model.Address.Country, @Model.Address.City, @Model.Address.Region, @Model.Address.Street, @Model.Address.PostalCode
                        </div>
                    }
                    else
                    {
                        <div>No address available</div>
                    }
                </dd>
            </dl>

            <h4>Hotel Rooms</h4>
            <table class="hotel-table wide-table">
                <thead>
                    <tr>
                        <th>Номер кімнати</th>
                        <th>Ціна за одну ніч</th>
                        <th>Є в наявності ?</th>
                        <th>Зручності</th>
                        <th>Фото кімнати</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td>@room.RoomNumber</td>
                            <td>@room.PricePerNight</td>
                            <td>@(room.IsAvailable ? "Так" : "Ні")</td>
                            <td>
                                @if (room.RoomAmenities != null && room.RoomAmenities.Any())
                                {
                                    <ul>
                                        @foreach (var amenity in room.RoomAmenities)
                                        {
                                            <li>@amenity.Name</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No amenities available</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(room.PictureUrl))
                                {
                                    <img src="@room.PictureUrl" alt="Room Picture" style="max-width: 100px; max-height: 100px;" />
                                }
                                else
                                {
                                    <span>No picture available</span>
                                }
                            </td>
                            <td class="btn-right">
                                @if (room.IsAvailable)
                                {
                                    <a asp-action="Create" asp-controller="Reservation" asp-route-hotelId="@Model.Id" asp-route-roomId="@room.Id" class="btn btn-reserve">Зарезервувати</a>
                                }
                                else
                                {
                                    <span class="text-danger">Not Available</span>
                                }
                                @if (User.IsInRole("Administrator") || User.IsInRole("HotelManager"))
                                {
                                    <a asp-action="Edit" asp-controller="Room" asp-route-id="@room.Id" class="btn btn-primary">Редагувати</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <h4>Reviews</h4>
            <table class="hotel-table wide-table">
                <thead>
                    <tr>
                        <th>Comment</th>
                        <th>Rating</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model.Reviews)
                    {
                        <tr>
                            <td>@review.Comment</td>
                            <td>@review.Rating</td>
                            <td>@review.Date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="btn-container">
        <a asp-action="Index" asp-controller="Home" class="btn btn-back-to-list">Назад</a>
        <a asp-action="AddReview" asp-route-hotelId="@Model.Id" class="btn btn-review">Залишити відгук</a>
    </div>
</div>

<footer class="footer-nav">
    <div class="container">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">Контакти</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Terms" asp-action="Index">Умови використання</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
            </li>
        </ul>
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<Hotel>

@{
    ViewData["Title"] = "Hotels";
}

<style>
    body {
        background: linear-gradient(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.8)), url('/images/lake-6712968_1920.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .hotel-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        max-width: 1200px;
        margin: 30px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .hotel-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .hotel-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .hotel-table th,
        .hotel-table td {
            padding: 15px;
            text-align: left;
        }

        .hotel-table th {
            background-color: #f2f2f2;
        }

        .hotel-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .hotel-table img {
            max-width: 100px;
            height: auto;
            border-radius: 5px;
        }

    .btn-primary,
    .btn-info,
    .btn-danger {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-primary:hover,
        .btn-info:hover,
        .btn-danger:hover {
            opacity: 0.8;
        }

    .navbar-nav .nav-link,
    .navbar-nav .btn-link {
        background-color: #D3D3D3;
        border-radius: 10px;
        padding: 5px 10px;
        margin: 0 5px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .navbar-nav .nav-link:hover,
        .navbar-nav .btn-link:hover {
            background-color: #e0e0e0;
        }

    .navbar {
        border-radius: 10px;
        padding: 10px 20px;
    }

        .navbar .nav-item .nav-link {
            color: #333;
        }

            .navbar .nav-item .nav-link:hover {
                color: #000;
            }

    .footer-nav {
        background-color: #343a40;
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

        .footer-nav .nav-link {
            color: #fff !important;
            font-size: 1.1rem;
            padding: 0 15px;
        }

            .footer-nav .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }

    .footer-divider {
        color: #fff;
        margin: 0 10px;
    }

    .navbar-background {
        background-color: transparent;
    }
</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-background border-bottom box-shadow mb-3 rounded">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Головна сторінка</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservation" asp-action="MyReservations">Мої резервації</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="MyProfile">Мій профіль</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                <button type="submit" class="nav-link text-dark btn btn-link" style="border: none;">Вийти</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="hotel-container">
    <h1 class="hotel-title">Hotels</h1>

    <p>
        @if (User.IsInRole("Administrator"))
        {
            <a class="btn btn-primary" asp-action="Create">Create New Hotel</a>
        }
    </p>

    <table class="hotel-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                <th>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>
                        <img src="@item.PictureUrl" alt="@item.Name" />
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @if (User.IsInRole("Administrator") || User.IsInRole("HotelManager"))
                        {
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<footer class="footer-nav">
    <div class="container">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">Контакти</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Terms" asp-action="Index">Умови використання</a>
            </li>
            <li class="footer-divider">|</li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Політика конфіденційності</a>
            </li>
        </ul>
    </div>
</footer>
